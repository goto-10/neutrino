import $assert;
import $core;

def $test_simple() {
  def $pipe := new @core:io:Pipe();
  def $p_write := $pipe.out.write("Hello, World!");
  $assert:not($p_write.is_resolved?);
  $p_write.then(fn $v {
    $assert:that($v);
  });
  def $p_read := $pipe.in.read(5);
  $assert:not($p_read.is_resolved?);
  $p_read.then(fn $v {
    $assert:equals(true, $v);
  });
}

do {
  $test_simple();
}
