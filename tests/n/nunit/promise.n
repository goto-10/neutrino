import $assert;
import $core;

def $test_simple_promise() {
  def $p := @core:Promise.pending();
  $assert:equals(false, $p.is_resolved);
  $assert:equals(18, try $p.get() on.promise_not_resolved($p) => 18);
}

do $test_simple_promise();
