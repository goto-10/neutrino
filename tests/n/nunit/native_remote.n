import $assert;
import $core;

def $test_time() {
  def $current_p := @core:time->current();
  $assert:not($current_p.is_resolved?);
  $current_p.then(fn $value => $assert:that($value > 0));
}

def $test_unknown() {
  $assert:equals(op.blargh(), try @core:time->blargh() on.unknown_native_method($s) => $s);
}

def $test_echo() {
  def $run := fn ($in) {
    # Test round-tripping a single argument through a remote call.
    @core:echo->echo($in).then(fn $out => $assert:equals($in, $out));
  }
  $run(946);
  $run("hey");
  $run("oof!");
  $run(true);
  $run(false);
  $run(null);
  $run([]);
  $run([1, 2, 3]);
  $run([1, [2, [3, [4]]]]);
  $run({});

}

do {
  $test_time();
  $test_echo();
  $test_unknown();
}
